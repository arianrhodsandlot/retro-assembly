{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "pnpm -F client -r dev",
    "dev:server": " node --disable-warning=ExperimentalWarning --env-file=.env --watch src/server/servers/node.ts",
    "dev:test": "playwright test -c tests/e2e --headed --ui",
    "lint": "eslint src",
    "prepare": "simple-git-hooks",
    "prepare-test": "node ./scripts/prepare-test.js",
    "preview": "vite build && vite preview",
    "test": "playwright test -c tests/e2e"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.?(m|c)@(j|t)s?(x)": "eslint --fix",
    "package.json": "pnpm dlx sort-package-json"
  },
  "browserslist": [
    "defaults",
    "not op_mini all"
  ],
  "packageManager": "pnpm@10.3.0",
  "devDependencies": {
    "@arianrhodsandlot/eslint-config": "0.17.1",
    "eslint": "9.20.1",
    "lint-staged": "15.4.3",
    "simple-git-hooks": "2.11.1",
    "typescript": "5.7.3"
  }
}
